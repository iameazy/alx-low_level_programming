#!/bin/bash
# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
  echo "Error: CFILE variable is not set."
  exit 1
fi

# Check if the C file exists
if [ ! -f "$CFILE" ]; then
  echo "Error: C file '$CFILE' not found."
  exit 1
fi

# Run the preprocessor and save the output to a file
output_file="c"
cpp "$CFILE" > "$output_file"

echo "Preprocessing completed. Result saved in '$output_file'."

