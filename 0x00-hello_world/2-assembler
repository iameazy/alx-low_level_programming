#!/bin/bash

# Check if the C file is provided as an argument
if [ $# -eq 0 ]; then
    echo "Usage: $0 <C_FILE>"
    exit 1
fi

# Get the C file name from the command line argument
CFILE="$1"

# Check if the C file exists
if [ ! -f "$CFILE" ]; then
    echo "Error: The C file '$CFILE' does not exist."
    exit 1
fi

# Extract the base name (without extension) of the C file
BASENAME=$(basename "$CFILE" .c)

# Generate the assembly code using gcc
OUTPUT_FILE="$BASENAME.s"
gcc -S "$CFILE" -o "$OUTPUT_FILE"

# Check if the assembly code generation was successful
if [ $? -eq 0 ]; then
    echo "Assembly code generated successfully and saved as '$OUTPUT_FILE'."
else
    echo "Error: Failed to generate assembly code."
fi
