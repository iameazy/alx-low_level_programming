#!/bin/bash
if [ $# -ne 1 ]; then
    echo "Usage: $0 <C_FILE>"
    exit 1
fi
CFILE="$1"
if [ ! -f "$CFILE" ]; then
    echo "Error: The C file '$CFILE' does not exist."
    exit 1
fi
BASENAME=$(basename -- "$CFILE" .c)
gcc -S -masm=intel "$CFILE" -o "$BASENAME.s"
if [ $? -eq 0 ]; then
    echo "Assembly code generated successfully and saved to '$BASENAME.s'."
else
    echo "Error: Failed to generate assembly code."
    exit 1
fi
